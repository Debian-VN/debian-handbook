msgid ""
"\n"
"JSCommSettings = {\n"
"\n"
"  // Web server environment\n"
"  webserver: {\n"
"    url_prefix: null            // If set, prefix used to construct sound/ URLs\n"
"  },\n"
"\n"
"  // STUN/TURN media relays\n"
