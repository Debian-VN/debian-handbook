msgid "<primary>GNU</primary><secondary>General Public License</secondary>"
msgstr "<primary>GNU</primary><secondary>一般公衆利用許諾書</secondary>"

# Checked-By: Ryuunosuke Ayanokouzi;
msgid "<primary>General Public License</primary>"
msgstr "<primary>一般公衆利用許諾書</primary>"

