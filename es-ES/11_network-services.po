msgstr "<primary>WebRTC</primary>"

msgid "<primary>SIP</primary><secondary>WebSockets</secondary>"
msgstr "<primary>SIP</primary><secondary>WebSockets</secondary>"

msgid "<emphasis>IN PRACTICE</emphasis> Try WebRTC"
